<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Ishay.MySqlUsersEntity" table="users" schema="chat_schema">
        <id name="userid">
            <column name="userid" sql-type="int(11)"/>
        </id>
        <property name="forename">
            <column name="forename" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>